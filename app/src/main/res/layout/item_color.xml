<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_color"
    app:cardBackgroundColor="#FF2231"
    app:cardCornerRadius="0dp">

    <TextView
        android:text="Holi"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="@color/colorLightPrimary"
        android:background="#ab2e2e2e"
        android:gravity="center"
        android:id="@+id/text_view_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_color_text_view"
        android:layout_gravity="bottom"/>

</android.support.v7.widget.CardView>